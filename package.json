  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "yarn run test -- --watch",
    "build": "tsc",
    "build:watch": "yarn run build -- --watch",
    "ts": "tsc --noEmit && cd tests && tsc --noEmit"
