    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "peerDependencies": {
    "typescript": "^2.3.4"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/fs-extra": "^3.0.3",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/jest": "^19.2.4",
    "@types/js-yaml": "^3.5.31",
    "@types/lodash": "^4.14.66",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.6",
    "ts-node": "^3.0.6",
    "typescript": "^2.3.4"
  },
  "dependencies": {
    "@types/graphql": "^0.9.1",
    "@types/node": "^7.0.31",
    "@types/yargs": "^6.6.0",
    "babel-preset-shopify": "^16.1.0",
    "chalk": "^1.1.3",
    "eslint": "3.17.x",
    "eslint-plugin-graphql": "0.8.1",
    "eslint-plugin-shopify": "^16.0.1",
    "fs-extra": "^3.0.1",
    "graphql-typescript-definitions": "^0.7.0",
    "graphql-validate-fixtures": "^0.6.0",
    "isomorphic-fetch": "^2.2.1",
    "js-yaml": "^3.8.4",
    "lodash": "^4.17.4",
    "stylelint": "7.6.x",
    "stylelint-config-shopify": "^1.0.0",
    "tslint": "^5.4.3",
    "tslint-config-shopify": "^2.1.0",
    "yargs": "^8.0.2"
  }
}
